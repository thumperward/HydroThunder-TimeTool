{
	"name": "Debian",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"bungcip.better-toml",
				"ms-azuretools.vscode-docker",
				"ms-python.python",
				"redhat.vscode-yaml",
				"timonwong.shellcheck"
